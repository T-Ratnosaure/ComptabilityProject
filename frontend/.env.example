# Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# API Backend URL
# Default: http://localhost:8000 (local development)
# Production: Update to your deployed backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# API Authentication Key
# Required for production. In development, backend allows bypass if not set.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: This key must match API_SECRET_KEY in your backend .env
NEXT_PUBLIC_API_KEY=
