# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# SECURITY WARNING: Never commit real credentials to version control!
# Copy this file to .env and fill in your actual values.
# The .env file is gitignored and should NEVER be committed.
# See SECURITY.md for secrets management best practices.
# =============================================================================

# Application Configuration
APP_NAME=ComptabilityProject
APP_VERSION=0.1.0
ENVIRONMENT=development
# WARNING: Set to False in production!
DEBUG=False

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/database/comptability.db

# File Storage
UPLOAD_DIR=./data/uploads
TEMP_DIR=./data/temp
MAX_UPLOAD_SIZE_MB=10

# API Configuration
API_V1_PREFIX=/api/v1
# WARNING: Restrict CORS origins in production!
CORS_ORIGINS=["http://localhost:3000"]

# API Authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=change_this_to_a_secure_random_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =============================================================================
# LLM Configuration (Phase 5)
# =============================================================================
# Get your API key from: https://console.anthropic.com/
# WARNING: Keep this secret! Rotate immediately if exposed.
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_GENERAL=100/minute
RATE_LIMIT_LLM=10/minute
RATE_LIMIT_AUTH=5/minute

# =============================================================================
# Optimization Settings
# =============================================================================
# Set to True to show partner/enterprise recommendations (e.g., Profina for Girardin)
SHOW_PARTNER_SUGGESTIONS=False
